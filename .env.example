# Home Assistant Configuration
# Copy this file to .env and update with your actual values

# Set to false to connect to real Home Assistant
VITE_DEV_MODE=false

# Your Home Assistant WebSocket URL
# Format: ws://your-home-assistant-ip:8123/api/websocket
# Example: ws://192.168.1.100:8123/api/websocket
VITE_HA_WEBSOCKET_URL=ws://localhost:8123/api/websocket

# Your Home Assistant Long-lived Access Token
# Generate this in Home Assistant: Profile -> Long-lived Access Tokens
VITE_HA_ACCESS_TOKEN=your-home-assistant-long-lived-access-token